{% extends 'base.html.twig' %}

{% block title %}SNOWTRICKS{% endblock %}

{% block body %}
	<header class="bg-dark position-relative overflow-hidden header-no-gap">
		<div id="top" class="position-absolute top-0 start-0 w-100 h-100">
			<img src="{{ asset('images/SnowTrick_0.png') }}" alt="Snow Tricks" class="w-100 h-100 img-no-gap"
				 style="object-fit: cover; object-position: center;">
		</div>
		<div class="position-relative text-center z-index-2" style="padding-top: 20%; padding-bottom: 20%;">
			<div class="bg-dark bg-opacity-50 p-3 rounded">
				<h1 class="display-4 fw-bolder text-light">Bienvenue sur SnowTricks</h1>
				<p class="lead fw-normal text-light">Partagez vos meilleurs tricks</p>
			</div>
		</div>
		<a href="#tricks" class="scroll-down text-light">
			<i class="bi bi-chevron-down"></i>
		</a>
	</header>
	<div id="tricks" class="container px-5 my-5">
		<div class="row g-4">
			<div id="tricks-list" class="row g-4">
				{% include '/trick/partials/_tricks_list.html.twig' %}
			</div>
			<div class="text-center mt-4">
				<button id="load-more-tricks" class="btn btn-primary">Voir plus</button>
			</div>
		</div>
	</div>
	<a href="#tricks" class="scroll-up" id="scroll-up" style="display: none;">
		<i class="bi bi-chevron-up"></i>
	</a>

	<script>
        window.addEventListener('scroll', function() {
            const scrollUpButton = document.getElementById('scroll-up');
            const tricksSection = document.getElementById('tricks');
            const tricksSectionTop = tricksSection.offsetTop;

            if (window.scrollY > tricksSectionTop) {
                scrollUpButton.style.display = 'flex';
            } else {
                scrollUpButton.style.display = 'none';
            }
        });

        document.addEventListener("DOMContentLoaded", function() {
            document.getElementById('scroll-up').style.display = 'none';
        });
	</script>
{% endblock %}
