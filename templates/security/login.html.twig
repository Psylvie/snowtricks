{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <main class="flex-shrink-0">
        <section class="py-5 d-flex justify-content-center align-items-start min-vh-100">
            <div class="container px-5">
                <h1 class="fw-bolder mb-4 text-center text-light">Se connecter</h1>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="bg-light rounded-3 shadow-sm p-4">
                            {% if error %}
                                <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <form action="{{ path('app_login') }}" method="post">
                                <div class="form-group mb-3 text-center">
                                    <label for="username" class="form-label mt-4">Nom d'utilisateur</label>
                                    <div class="d-flex flex-column">
                                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control border-0 bg-transparent" autocomplete="username" required autofocus style="box-shadow: none; border-bottom: 2px solid black;">
                                        <div class="border-bottom border-dark" style="height: 2px;"></div>
                                    </div>
                                </div>
                                <div class="form-group mb-3 text-center">
                                    <label for="password" class="form-label mt-4">Mot de passe</label>
                                    <div class="d-flex flex-column">
                                        <input type="password" name="_password" id="password" class="form-control border-0 bg-transparent" autocomplete="current-password" required style="box-shadow: none; border-bottom: 2px solid black;">
                                        <div class="border-bottom border-dark" style="height: 2px;"></div>
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button type="submit" class="mt-4 btn btn-primary w-100">Créer un compte</button>

                            </form>
                            <div class="text-center mt-3">
                                <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié ?</a>
                            </div>
                            <div class="text-center mt-3 d-block d-md-none">
                                <a href="{{ path('app_register') }}"> S'inscrire</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
