{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main class="flex-shrink-0">
        <section class="py-5 d-flex justify-content-center align-items-start min-vh-100">
            <div class="container px-5">
                <h1 class="fw-bolder mb-4 text-light text-center">Inscription</h1>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="bg-light rounded-3 shadow-sm p-4">
                            {% for flash_error in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            {{ form_start(registrationForm) }}
                            <div class="form-group mb-3 text-center">
                                {{ form_label(registrationForm.username, 'Nom', {'label_attr': {'class': 'mt-4'}}) }}
                                <div class="d-flex flex-column">
                                    {{ form_widget(registrationForm.username, {
                                        'attr': {
                                            'class': 'form-control border-0 bg-transparent',
                                            'style': 'box-shadow: none; border-bottom: 2px solid black;'
                                        }
                                    }) }}
                                    <div class="border-bottom border-dark" style="height: 2px;"></div>
                                    {% if registrationForm.username.vars.errors|length > 0 %}
                                        <div class="text-danger">
                                            {{ registrationForm.username.vars.errors[0].message }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group mb-3 text-center">
                                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'mt-4'}}) }}
                                <div class="d-flex flex-column">
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'form-control border-0 bg-transparent',
                                            'style': 'box-shadow: none; border-bottom: 2px solid black;'
                                        }
                                    }) }}
                                    <div class="border-bottom border-dark" style="height: 2px;"></div>
                                    {% if registrationForm.email.vars.errors|length > 0 %}
                                        <div class="text-danger">
                                            {{ registrationForm.email.vars.errors[0].message }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group mb-3 text-center">
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'mt-4'}}) }}
                                <div class="d-flex flex-column">
                                    {{ form_widget(registrationForm.plainPassword, {
                                        'attr': {
                                            'class': 'form-control border-0 bg-transparent',
                                            'style': 'box-shadow: none; border-bottom: 2px solid black;'
                                        }
                                    }) }}
                                    <div class="border-bottom border-dark" style="height: 2px;"></div>
                                    {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                        <div class="text-danger">
                                            {{ registrationForm.plainPassword.vars.errors[0].message }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <button type="submit" class="mt-4 btn btn-primary w-100">Créer un compte</button>
                            {{ form_end(registrationForm) }}
                            <div class="text-center mt-3 d-block d-md-none">
                                <a href="{{ path('app_login') }}">Déjà un compte? Se connecter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
