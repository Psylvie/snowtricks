{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-light shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Réinitialiser le mot de passe</h1>
                        {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(resetForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            {{ form_errors(resetForm.plainPassword) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_label(resetForm.confirmPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(resetForm.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                            {{ form_errors(resetForm.confirmPassword) }}
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                        </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
