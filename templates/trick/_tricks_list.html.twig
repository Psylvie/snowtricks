{% for trick in tricks %}
    <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-4">
        <div class="card h-100">
            <img src="{{ asset('images/snowtrick.jpg') }}" class="card-img-top" alt="{{ trick.name }}">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0 text-truncate" style="max-width: 70%;">
{#                        <a href="{{ path('app_trick_detail', { 'slug': trick.slug }) }}" style="color: black; text-decoration: none;">#}
                            {{ trick.name }}
{#                        </a>#}
                    </h5>
                    {% if is_granted('ROLE_USER') %}
                        <div class="d-flex flex-shrink-0">
                            <a href="{{ path('app_trick_edit', { 'slug': trick.slug }) }}" class="text-decoration-none me-2">
                                <i class="bi bi-pencil" style="color: black;"></i>
                            </a>
                            <a href="{{ path('app_trick_delete', { 'slug': trick.slug }) }}" class="text-decoration-none" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette figure ?')">
                                <i class="bi bi-trash text-danger"></i>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
